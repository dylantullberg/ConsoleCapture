{
  "manifest_version": 3,
  "name": "ConsoleCapture",
  "version": "1.8",
  "description": "Filter and copy console logs including errors, warnings, and info logs with a single click.",
  "permissions": [
    "activeTab",
    "debugger",
    "scripting",
    "storage",
    "notifications",
    "tabs",
    "webNavigation"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "ConsoleCapture",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
